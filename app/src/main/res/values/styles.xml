<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Section buttons on the main navigation page -->
    <style name="NavSection">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:onClick">goToSection</item>
    </style>

    <!-- html-textview style for sections -->
    <style name="SectionBody">
        <item name="android:textColorLink">@color/colorPrimaryLight</item>
    </style>

</resources>
